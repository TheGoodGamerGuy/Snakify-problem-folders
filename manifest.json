{
    "manifest_version": 3,
    "name": "Snakify folders",
    "version": "1.0",
    "description": "Adds interactable folders for created problems in Snakify",

    "permissions": [
        "activeTab"
    ],

    "content_scripts": [
        {
            "js": ["src/AddFolders.js"],
            "matches": [
                "https://snakify.org/en/lessons/*-*-*-*-*"
            ]
        }
    ],
    "icons": { 
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png" 
    }
}
